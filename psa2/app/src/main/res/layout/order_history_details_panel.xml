<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llProcess"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/check_out_banner"
    android:gravity="center"
    android:orientation="horizontal">

    <include
        android:id="@+id/checkout_dot_1"
        layout="@layout/registration_panel_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <include
        android:id="@+id/checkout_dot_2"
        layout="@layout/registration_panel_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <include
        android:id="@+id/checkout_dot_3"
        layout="@layout/registration_panel_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <include
        android:id="@+id/checkout_dot_4"
        layout="@layout/registration_panel_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <include
        android:id="@+id/checkout_dot_5"
        layout="@layout/registration_panel_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <include
        android:id="@+id/checkout_dot_6"
        layout="@layout/registration_panel_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>