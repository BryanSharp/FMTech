<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Layout.AllFill.OrientationVert"
    android:background="@color/grey">

    <RelativeLayout style="@style/Widget.Layout.AllFill">

        <TextView
            android:id="@+id/txtName"
            style="@style/Widget.TextView.LargeBlack"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/txtClear"
            style="@style/Widget.TextView.LargeBlack"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="@string/search_page_clear"
            android:visibility="gone" />

    </RelativeLayout>

    <View style="@style/Widget.Layout.Line" />

</LinearLayout>