<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_account_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--
        <parknshop.parknshopapp.Fragment.MemberZone.View.MemberZoneCardView
            android:id="@+id/member_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Existing Point"
                android:textColor="@android:color/white"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/rlMoneyBackCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="50sp" />

                <TextView
                    style="@style/Widget.TextView.LargeWhite"
                    android:layout_alignBottom="@+id/txtPoint"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/txtPoint"
                    android:text="PTS" />

                <TextView
                    android:id="@+id/txtPointExpiryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPoint"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white" />
            </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rlLinkMoneyBack"
            style="@style/Widget.Layout.WidthFill"
            android:layout_height="150dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtLinkMoneyBackTitle"
                style="@style/Widget.TextView.LargeWhite"
                android:layout_above="@+id/btnLinkMoneyBack"
                android:layout_centerHorizontal="true"
                android:text="@string/myaccount_page_please_link_moneyback" />

            <parknshop.parknshopapp.Fragment.MemberZone.View.MemberZoneButton
                android:id="@+id/btnLinkMoneyBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:checkout_button_title="@string/myaccount_page_link_moneyback" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.48"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent_white_80"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/card_number_hint"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txtCardNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@android:color/white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llMoneyBackCardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:text="@string/myaccount_page_moneyback_card_profile"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/buy_more_save_more_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMoneyBackPromotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:text="@string/myaccount_page_moneyback_promotion"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/buy_more_save_more_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:text="@string/home_activity_sliding_menu_m_coupon"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/buy_more_save_more_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRedemption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:text="@string/home_activity_sliding_menu_redemption"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/buy_more_save_more_arrow_right" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button_primary"
        android:padding="10dp"
        android:text="@string/home_activity_sliding_menu_logout"
        android:textColor="@android:color/white" />
</RelativeLayout>