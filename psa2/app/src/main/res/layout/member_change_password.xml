<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Layout.AllFill">

    <LinearLayout
        style="@style/Widget.Layout.AllFill.OrientationVert"
        android:layout_above="@+id/btnLink">

        <parknshop.parknshopapp.View.FixedFontStyleEditText
            android:id="@+id/edtCurrentPassword"
            style="@style/Widget.EditText.WithBG"
            android:layout_margin="10dp"
            android:hint="@string/current_password_hint"
            android:inputType="textPassword" />

        <parknshop.parknshopapp.View.FixedFontStyleEditText
            android:id="@+id/edtNewPassword"
            style="@style/Widget.EditText.WithBG"
            android:layout_margin="10dp"
            android:hint="@string/new_password_hint"
            android:inputType="textPassword" />

        <parknshop.parknshopapp.View.FixedFontStyleEditText
            android:id="@+id/edtConfirmPassword"
            style="@style/Widget.EditText.WithBG"
            android:layout_margin="10dp"
            android:hint="@string/confirm_password_hint"
            android:inputType="textPassword"
            android:maxLength="6" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate"
        style="@style/Widget.TextView.LargeWhite"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_sharp_blue"
        android:text="@string/update_password_btn" />

</RelativeLayout>