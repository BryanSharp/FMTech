<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Layout.AllFill.OrientationVert">

    <ImageView
        android:id="@+id/tutorial_image"
        android:layout_margin="60dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"/>
    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/tutorial_title"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="" />

    <TextView
        style="@style/Widget.TextView.NormalWhite"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/tutorial_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="13sp"
        android:text="" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <View
            android:id="@+id/dot_1"
            android:layout_margin="5dp"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/tutorial_fragment_dot_enabled"/>

        <View
            android:id="@+id/dot_2"
            android:layout_margin="5dp"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/tutorial_fragment_dot_disabled"/>

        <View
            android:id="@+id/dot_3"
            android:layout_margin="5dp"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/tutorial_fragment_dot_disabled"/>

        <View
            android:id="@+id/dot_4"
            android:layout_margin="5dp"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/tutorial_fragment_dot_disabled"/>

    </LinearLayout>
</LinearLayout>
