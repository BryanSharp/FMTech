<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Layout.AllFill">

    <LinearLayout
        style="@style/Widget.Layout.AllFill.OrientationVert"
        android:layout_above="@+id/btnLink">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edtMemberCardNo"
                style="@style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/vLine"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:drawablePadding="3dp"
                android:hint="@string/link_card_member_card_no_hint"
                android:imeOptions="actionSearch"
                android:inputType="text" />

            <View
                android:id="@+id/vLine"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_toLeftOf="@+id/imgBarcode"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/imgBarcode"
                style="@style/Widget.ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/general_icn_scan" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edtPassword"
            style="@style/Widget.EditText.WithBG"
            android:layout_margin="10dp"
            android:hint="@string/link_card_password_hint"
            android:maxLength="6" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLink"
        style="@style/Widget.TextView.LargeWhite"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_sharp_blue"
        android:text="@string/link_the_member_ship_card" />

</RelativeLayout>