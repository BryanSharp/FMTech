<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/sub"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--
            <TextView
                android:id="@+id/sub_drawable"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/oval_white_circle"
                android:textSize="15sp"
                android:text="-"/>-->

            <ImageView
                android:id="@+id/sub_drawable"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/shopping_cart_sub"/>
        </LinearLayout>

        <TextView
            android:id="@+id/count"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/color_primary"
            android:textSize="15sp"
            android:text="1"/>

        <EditText
            android:id="@+id/edit_count"
            android:visibility="gone"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:text="1"/>

        <LinearLayout
            android:id="@+id/plus"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/plus_drawable"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/shopping_cart_add"/>
            <!--
            <TextView
                android:id="@+id/plus_drawable"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/oval_white_circle"
                android:textSize="15sp"
                android:text="+"/>-->
        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/add_plus_disable"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#50000000"
        />
</RelativeLayout>