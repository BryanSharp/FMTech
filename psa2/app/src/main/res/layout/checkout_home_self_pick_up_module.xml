<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkout_please_select_store"/>

        <LinearLayout
            android:id="@+id/self_pick_up_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <parknshop.parknshopapp.View.CheckoutButton
                app:checkout_button_title="@string/checkout_cheung_chau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <parknshop.parknshopapp.View.CheckoutButton
                app:checkout_button_title="@string/checkout_lautau_island"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <parknshop.parknshopapp.View.CheckoutReminder
            android:id="@+id/item_not_available_reminder_self"
            app:checkout_remeinder_type="self pick up"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>