<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <parknshop.parknshopapp.View.CheckoutPaymentItem
        android:id="@+id/btnVisa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:checkout_payment_drawable="@drawable/payment_method_icn_visa" />

    <parknshop.parknshopapp.View.CheckoutPaymentItem
        android:id="@+id/btnMaster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:checkout_payment_drawable="@drawable/payment_method_icn_master_card" />

    <parknshop.parknshopapp.View.CheckoutPaymentItem
        android:id="@+id/btnAMEX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:checkout_payment_drawable="@drawable/payment_method_icn_am" />

    <parknshop.parknshopapp.View.CheckoutPaymentItem
        android:id="@+id/btnCOD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:checkout_payment_title="CASH ON DELIVERY" />
</LinearLayout>