<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list"
        style="@style/Widget.Layout.AllFill"
        android:layout_above="@+id/status" />

    <TextView
        android:id="@+id/txtNoResult"
        style="@style/Widget.TextView.LargeBlack"
        android:layout_centerInParent="true"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/icon_item_not_found"
        android:gravity="center"
        android:text="@string/not_found"
        android:visibility="gone" />

    <Button
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_filter"
        android:text="@string/order_history_status_btn"
        android:textColor="@android:color/white" />
</RelativeLayout>