<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp">
    <RelativeLayout
        android:id="@+id/profile_img"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/money_back_background_trim"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <parknshop.parknshopapp.View.PureCircleImageView
            android:id="@+id/circle_image_view"
            android:layout_height="120dp"
            android:layout_width="120dp"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/btn_take_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/tv_name"
            android:layout_alignRight="@+id/circle_image_view"
            android:scaleType="fitXY"
            android:src="@drawable/account_detail_icn_take_photo"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>