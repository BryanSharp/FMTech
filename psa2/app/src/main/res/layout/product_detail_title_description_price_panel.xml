<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/product_detail_title"
        android:fontFamily="sans-serif-regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:textColor="#292d84"
        android:textSize="23sp"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:id="@+id/small_description"
        android:fontFamily="sans-serif-light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textColor="#2e2e2e"
        android:text=""/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_detail_current_price"
            android:fontFamily="sans-serif-regular"
            android:textColor="#292d84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginRight="-5dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text=""/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/product_detail_rrp"
            android:src="@drawable/rrp"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/product_detail_original_price"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-5dp"
            android:background="@drawable/crossline"
            android:textSize="12sp"
            android:text=""/>


    </LinearLayout>
</LinearLayout>