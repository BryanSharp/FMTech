<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:background="@drawable/checkout_next_btn_background"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:text="AVAILABE"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/disabled_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/checkout_next_dim_background">

        <TextView
            android:id="@+id/hidden_textview"
            android:background="@drawable/checkout_next_btn_background"
            android:visibility="invisible"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="10sp"
            android:text="UNAVAILABE"/>
    </RelativeLayout>
</RelativeLayout>