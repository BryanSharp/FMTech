<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/setting_item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/setting_notifications"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/setting_item_minor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/scPushOnOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View style="@style/Widget.Layout.Line" />

            <parknshop.parknshopapp.Fragment.Settings.View.SettingItemView
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_minor_title="english"
                app:setting_item_title="@string/setting_language" />

            <parknshop.parknshopapp.Fragment.Settings.View.SettingItemView
                android:id="@+id/tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_show_arrow="false"
                app:setting_item_title="@string/home_activity_sliding_menu_tutorial" />

            <LinearLayout
                android:id="@+id/llAddView"
                style="@style/Widget.Layout.WidthFill.OrientationVert"></LinearLayout>

            <parknshop.parknshopapp.Fragment.Settings.View.SettingItemView
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_show_arrow="false"
                app:setting_item_title="@string/setting_rate_in_app_store" />


            <parknshop.parknshopapp.Fragment.Settings.View.SettingItemView
                android:id="@+id/setting_item_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_minor_title="1.0"
                app:setting_item_show_arrow="false"
                app:setting_item_title="@string/setting_version" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>