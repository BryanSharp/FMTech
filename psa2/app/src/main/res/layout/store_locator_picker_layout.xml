<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/picker_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/picker_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:text=""
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/picker_image_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/home_activity_sliding_menu_item_arrow_down"
            android:tint="@android:color/black" />

        <RelativeLayout
            android:id="@+id/dimmed_background"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/checkout_next_dim_background"
            android:padding="10dp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>