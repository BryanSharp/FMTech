<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <parknshop.parknshopapp.View.CheckoutEditText
            android:id="@+id/ecoupon_edit_text"
            app:checkout_edittext_title="@string/ecoupon_code"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <parknshop.parknshopapp.View.CheckoutButton
            android:id="@+id/ecoupon_btn_aply"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:checkout_button_is_alternative="true"
            app:checkout_button_title="@string/btn_ecoupon_apply"/>
    </LinearLayout>

</LinearLayout>