<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:background="@color/white"
        android:id="@+id/right_sliding_menu_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/checkout_btn_panel"
        android:background="#F4F4F4"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center|top"
            android:src="@drawable/buy_more_save_more_arrow_up"
            android:visibility="invisible"
            android:tint="@color/black"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/subtotal_placeholder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="#363636"
                android:layout_height="match_parent"
                android:text="@string/home_activity_sliding_menu_subtotal_placeholder"/>

            <TextView
                android:id="@+id/subtotal_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#0D3B89"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/delivery_fee_placeholder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="#363636"
                android:layout_height="match_parent"
                android:text="@string/home_activity_sliding_menu_delivery_placeholder"/>

            <TextView
                android:id="@+id/delivery_fee_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#FC586A"
                android:text="@string/free"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/discountItem_panel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<parknshop.parknshopapp.View.CheckoutDiscountItem
                app:checkout_discount_title="dicount1"
                app:checkout_discount_data="dicount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <parknshop.parknshopapp.View.CheckoutDiscountItem
                app:checkout_discount_title="dicount2"
                app:checkout_discount_data="dicount2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <parknshop.parknshopapp.View.CheckoutDiscountItem
                app:checkout_discount_title="dicount3"
                app:checkout_discount_data="dicount3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkout_now_btn"
            android:background="@drawable/shopping_cart_btn_checkout"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/checkout_now"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/checkout"/>

            <TextView
                android:id="@+id/check_out_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/remove_panel"
        android:visibility="gone"
        android:background="@color/color_primary"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <parknshop.parknshopapp.View.CheckoutCheckBoxWithText
            android:id="@+id/shopping_cart_checkout_box"
            app:selected_drawable="@drawable/sign_in_icn_tick_selected"
            app:unselected_drawable="@drawable/checkout_unfilled_circle"
            app:background_color="#292d84"
            app:text_color="#FFFFFF"
            app:exclusive_checkbox="false"
            app:select_all="true"
            app:checkboxtitle="@string/inbox_page_select_all"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/white"
            android:text="@string/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>