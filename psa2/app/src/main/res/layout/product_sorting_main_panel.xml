<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sort_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:text="@string/sort_by"/>
        <ImageView
            android:id="@+id/sort_by_selected_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grocery_list_icn_next"/>

        <TextView
            android:id="@+id/sort_by_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redemption_grey"
            android:padding="16dp"
            android:layout_toLeftOf="@id/sort_by_selected_arrow"
            android:text="@string/any"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#DFDFDF" />

    <RelativeLayout
        android:id="@+id/special_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:text="@string/filter_by_special_offer"/>

        <ImageView
            android:id="@+id/special_offer_selected_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grocery_list_icn_next"/>


        <TextView
            android:id="@+id/special_offer_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redemption_grey"
            android:padding="16dp"
            android:layout_toLeftOf="@id/special_offer_selected_arrow"
            android:text="@string/any"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#DFDFDF"/>

    <RelativeLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:text="@string/filter_by_category"/>

        <ImageView
            android:id="@+id/category_selected_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grocery_list_icn_next"/>


        <TextView
            android:id="@+id/category_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redemption_grey"
            android:padding="16dp"
            android:layout_toLeftOf="@id/category_selected_arrow"
            android:text="@string/any"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#DFDFDF" />

    <RelativeLayout
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:text="@string/filter_by_brand"/>

        <ImageView
            android:id="@+id/brand_selected_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grocery_list_icn_next"/>

        <TextView
            android:id="@+id/brand_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redemption_grey"
            android:padding="16dp"
            android:layout_toLeftOf="@id/brand_selected_arrow"
            android:text="@string/any"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#DFDFDF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#DFDFDF" />

    <RelativeLayout
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:text="@string/retail_price"/>

        <ImageView
            android:id="@+id/price_selected_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/grocery_list_icn_next"/>


        <TextView
            android:id="@+id/price_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redemption_grey"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_toLeftOf="@id/price_selected_arrow"
            android:text="@string/any"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/range_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.yahoo.mobile.client.android.util.RangeSeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:maxHeight="200dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HK $1"/>

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HK$ > 1000"/>
    </RelativeLayout>
</LinearLayout>