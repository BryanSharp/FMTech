<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:background="@color/transparent_white_80"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/menu_icn_facebook"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <parknshop.parknshopapp.View.PureCircleImageView
            android:src="@color/transparent_black_80"
            app:civ_border_color="@color/transparent_black_80"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/menu_icn_youtube"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <parknshop.parknshopapp.View.PureCircleImageView
            android:src="@color/transparent_black_80"
            app:civ_border_color="@color/transparent_black_80"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/menu_icn_weibo"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <parknshop.parknshopapp.View.PureCircleImageView
            android:src="@color/transparent_black_80"
            app:civ_border_color="@color/transparent_black_80"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/menu_icn_wechat"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <parknshop.parknshopapp.View.PureCircleImageView
            android:src="@color/transparent_black_80"
            app:civ_border_color="@color/transparent_black_80"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>
</LinearLayout>