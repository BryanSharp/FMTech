<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/home_activity_rounded_white_background"
        android:gravity="center_vertical">

        <!--
            android:drawableLeft="@drawable/home_icn_search"-->
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/search_icon"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/home_icn_search"/>
        <EditText
            android:layout_toRightOf="@id/search_icon"
            android:id="@+id/edtProductSearch"
            style="@style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/vLine"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawablePadding="3dp"
            android:hint="@string/search_page_title_main"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:id="@+id/vLine"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/imgBarcode"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imgBarcode"
            android:layout_centerVertical="true"
            style="@style/Widget.ImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/general_icn_scan" />
    </RelativeLayout>
</LinearLayout>