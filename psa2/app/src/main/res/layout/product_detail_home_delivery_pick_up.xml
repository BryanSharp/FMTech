<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#353079"
            android:fontFamily="sans-serif-light"
            android:text="@string/order_details_delivery_method"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/home_delivery_view"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/product_detail_home_delivery"
                android:gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp">
            </LinearLayout>
            <TextView
                android:id="@+id/home_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#353079"
                android:fontFamily="sans-serif-light"
                android:text="@string/check_out_home_delivery"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/self_pick_up_view"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/product_detail_pick_up"
                android:gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp">
            </LinearLayout>
            <TextView
                android:id="@+id/promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#353079"
                android:fontFamily="sans-serif-light"
                android:text="@string/delivery_method_self"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>