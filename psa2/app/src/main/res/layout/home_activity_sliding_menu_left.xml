<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/left_listview_background"
        android:src="@drawable/menu_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <!--android:groupIndicator="@drawable/group_indicator"-->
    <com.diegocarloslima.fgelv.lib.FloatingGroupExpandableListView
        android:id="@+id/left_sliding_menu"
        android:transcriptMode="disabled"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:groupIndicator="@drawable/group_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/left_sliding_menu_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header_dummy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/submenu"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>


            <ImageView
                android:id="@+id/group_indicator"
                android:src="@drawable/home_activity_sliding_menu_item_arrow_up"
                android:visibility="invisible"
                android:layout_marginRight="20dp"
                android:layout_width="15dp"
                android:layout_height="15dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
