<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#EBF0F4"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <RatingBar
        android:id="@+id/ratingBar"
        android:visibility="gone"
        android:layout_margin="20dp"
        style="?android:attr/ratingBarStyleIndicator"
        android:isIndicator="false"
        android:progressDrawable="@drawable/ratingbar_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="5.0" />

    <io.techery.properratingbar.ProperRatingBar
        android:id="@+id/proper_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:prb_defaultRating="1"
        app:prb_tickNormalDrawable="@drawable/product_detail_icn_unstar"
        app:prb_tickSelectedDrawable="@drawable/product_detail_icn_star"
        app:prb_totalTicks="5"
        />
    <!--
        android:background="@drawable/on_sale_tag_items_number"
        android:backgroundTint="@android:color/holo_blue_dark" -->
    <TextView
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:text=""/>
</LinearLayout>
