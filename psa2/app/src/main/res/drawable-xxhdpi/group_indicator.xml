<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_empty="true">
        <layer-list>
            <item
                android:top="20dp"
                android:bottom="20dp"
                android:drawable="@drawable/home_activity_sliding_menu_item_arrow_up">
            </item>
        </layer-list>
    </item>

    <item android:state_expanded="true">
        <layer-list>
            <item
                android:top="20dp"
                android:bottom="20dp"
                android:drawable="@drawable/home_activity_sliding_menu_item_arrow_down">
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item
                android:top="20dp"
                android:bottom="20dp"
                android:drawable="@drawable/home_activity_sliding_menu_item_arrow_up">
            </item>
        </layer-list>
    </item>

</selector>