<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/SettingTextView"
            android:layout_width="match_parent"
            android:text="System Setting" />

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="Language" />

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="English"
                android:textColor="@color/text_gray" />
        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="Font Size" />

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Medium"
                android:textColor="@color/text_gray" />
        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="High Contract" />
            
            <com.fmtech.empf.ui.view.ToggleButton
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="Push notification" />

            <com.fmtech.empf.ui.view.ToggleButton
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/version_name_title"
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="Version" />

            <TextView
                android:id="@id/version_name"
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/version_name_title"
                android:text="1.1" />
        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="Disclaimer" />
        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="System Requirement" />
        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="System Maintenance Schedule" />
        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="Privacy Policy" />
        </RelativeLayout>

        <include layout="@layout/view_separator_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingTextView"
                android:layout_width="wrap_content"
                android:text="Terms And Conditions" />
        </RelativeLayout>

        <include layout="@layout/view_separator_line" />
    </LinearLayout>
</ScrollView>