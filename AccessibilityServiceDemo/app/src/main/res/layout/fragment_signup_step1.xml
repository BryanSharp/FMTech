                    android:gravity="center"
                    android:text="3"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/dot_background_normal"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@android:color/white" />
