<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/mpfa_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="32dp">

        <FrameLayout
            android:id="@id/first_login_navigator_step3"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/progress_bar_first_login_03"/>

            <TextView
                android:id="@id/tv_first_login_step3_navigator_title"
                style="@style/CommFontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="114dp"
                android:text="@string/security_question"
                android:textColor="@color/play_white"/>
        </FrameLayout>

        <LinearLayout
            android:id="@id/ll_first_login_step3_security_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@id/first_login_navigator_step3"
            android:orientation="vertical">

            <TextView
                style="@style/MPFATitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="@color/mpfa_title_color_orange"
                android:text="@string/security_question"/>

            <TextView
                style="@style/CommFontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/security_question_desc"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/mpfa_common_input_bg_color">

                <EditText
                    style="@style/CommonEditText"
                    android:id="@id/et_first_login_step3_security_question1"
                    android:hint="@string/select_question1"
                    android:layout_toLeftOf="@id/tv_security_question1_arrow"
                    android:focusable="false"/>

                <TextView
                    android:id="@id/tv_security_question1_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="#ffbdbdbd"
                    android:text="@string/icon_icon_arrow_down"/>

            </RelativeLayout>

            <EditText
                style="@style/CommonEditText"
                android:id="@id/et_first_login_step3_security_answer1"
                android:layout_marginTop="16dp"
                android:hint="@string/answer"/>

            <TextView
                android:id="@id/tv_answer1_error_info"
                style="@style/CommFontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/mpfa_error"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/mpfa_common_input_bg_color">

                <EditText
                    style="@style/CommonEditText"
                    android:id="@id/et_first_login_step3_security_question2"
                    android:hint="@string/select_question2"
                    android:layout_toLeftOf="@id/tv_security_question2_arrow"
                    android:focusable="false"/>

                <TextView
                    android:id="@id/tv_security_question2_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="#ffbdbdbd"
                    android:text="@string/icon_icon_arrow_down"/>

            </RelativeLayout>

            <EditText
                style="@style/CommonEditText"
                android:id="@id/et_first_login_step3_security_answer2"
                android:layout_marginTop="16dp"
                android:hint="@string/answer"/>

            <TextView
                android:id="@id/tv_answer2_error_info"
                style="@style/CommFontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/mpfa_error"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/mpfa_common_input_bg_color">

                <EditText
                    style="@style/CommonEditText"
                    android:id="@id/et_first_login_step3_security_question3"
                    android:hint="@string/select_question3"
                    android:layout_toLeftOf="@id/tv_security_question3_arrow"
                    android:focusable="false"/>

                <TextView
                    android:id="@id/tv_security_question3_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="#ffbdbdbd"
                    android:text="@string/icon_icon_arrow_down"/>

            </RelativeLayout>

            <EditText
                style="@style/CommonEditText"
                android:id="@id/et_first_login_step3_security_answer3"
                android:layout_marginTop="16dp"
                android:hint="@string/answer"/>

            <TextView
                android:id="@id/tv_answer3_error_info"
                style="@style/CommFontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/mpfa_error"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/ll_first_login_step3_security_questions"
            android:paddingBottom="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <Button
                style="@style/Style_MPFAButton"
                android:id="@id/btn_fisrt_login_step3_skip"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginTop="22dp"
                android:background="@drawable/btn_background_grey"
                android:text="@string/skip"/>

            <Button
                style="@style/Style_MPFAButton"
                android:id="@id/btn_fisrt_login_step3_next"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="13dip"
                android:text="@string/next"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
