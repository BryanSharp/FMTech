<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/mpfa_white</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:fitsSystemWindows">false</item>-->
    </style>

    <!--To support font size setting-->
    <style name="AppTheme.Small.FontSize" parent="AppTheme">
        <item name="mtelFontSize">12sp</item>
        <item name="mtelDateTimeFontSize">8sp</item>
        <item name="mtelButtonFontSize">14sp</item>
        <item name="mtelHeaderFontSize">16sp</item>
        <item name="mtelTitleFontSize">14sp</item>
        <item name="mtelIconFontSize">16sp</item>
        <item name="mtelIconFontSizePad">16sp</item>
        <item name="mtelDrawerFontSize">14sp</item>
        <item name="mtelHomeBtnFontSize">14sp</item>
    </style>

    <style name="AppTheme.Medium.FontSize" parent="AppTheme">
        <item name="mtelFontSize">14sp</item>
        <item name="mtelDateTimeFontSize">10sp</item>
        <item name="mtelButtonFontSize">16sp</item>
        <item name="mtelHeaderFontSize">18sp</item>
        <item name="mtelTitleFontSize">16sp</item>
        <item name="mtelIconFontSize">18sp</item>
        <item name="mtelIconFontSizePad">18sp</item>
        <item name="mtelDrawerFontSize">16sp</item>
        <item name="mtelHomeBtnFontSize">16sp</item>
    </style>

    <style name="AppTheme.Large.FontSize" parent="AppTheme">
        <item name="mtelFontSize">16sp</item>
        <item name="mtelDateTimeFontSize">12sp</item>
        <item name="mtelButtonFontSize">18sp</item>
        <item name="mtelHeaderFontSize">20sp</item>
        <item name="mtelTitleFontSize">18sp</item>
        <item name="mtelIconFontSize">20sp</item>
        <item name="mtelIconFontSizePad">20sp</item>
        <item name="mtelDrawerFontSize">18sp</item>
        <item name="mtelHomeBtnFontSize">18sp</item>
    </style>

    <style name="SettingTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">?attr/mtelFontSize</item>
    </style>

    <style name="CommFontSize">
        <item name="android:textSize">?attr/mtelFontSize</item>
    </style>

    <style name="DateTimeFontSize">
        <item name="android:textSize">?attr/mtelDateTimeFontSize</item>
    </style>

    <style name="MPFAHeader">
        <item name="android:textSize">?attr/mtelHeaderFontSize</item>
    </style>

    <style name="MPFATitle">
        <item name="android:textSize">?attr/mtelTitleFontSize</item>
    </style>

    <style name="MPFAIconFont">
        <item name="android:textSize">?attr/mtelIconFontSize</item>
    </style>

    <style name="HomeButton">
        <item name="android:textSize">?attr/mtelHomeBtnFontSize</item>
    </style>


    <style name="EditTextPassword" parent="CommonEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TalkBackSettings" parent="@android:style/Theme.Light" />

    <style name="AccessibilityTutorialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="AccessibilityTutorialTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="AccessibilityTutorialBodyTextPrimary" parent="@android:style/TextAppearance.Small"></style>

    <style name="AccessibilityTutorialIcon">
        <item name="android:layout_width">96dip</item>
        <item name="android:layout_height">96dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowColor">#B0000000</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog" />

    <style name="Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DimmingInstructionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">48dp</item>
    </style>

    <style name="MPFADialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Style_MPFAButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">?attr/mtelButtonFontSize</item>
        <item name="android:background">@drawable/btn_background</item>
    </style>

    <style name="MtelPlainText" />

    <style name="MtelMediumPlainText" parent="@style/MtelPlainText" />

    <style name="MtelDrawerText" parent="@style/MtelPlainText">
        <item name="android:textSize">?attr/mtelDrawerFontSize</item>
    </style>

    <style name="MtelDrawerBaseText" parent="@style/MtelDrawerText">
        <!--<item name="android:textSize">@dimen/play_drawer_primary_size</item>-->
        <!--<item name="android:textColor">@color/play_fg_primary</item>-->
        <!--<item name="android:textColor">#ff9e9e9e</item>-->
        <item name="android:textColor">@color/play_white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:background">@drawable/play_highlight_overlay_light</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/play_drawer_item_left_padding</item>
        <item name="android:paddingRight">@dimen/play_drawer_item_right_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/play_drawer_item_primary_min_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">32.0dip</item>
    </style>

    <style name="MtelDrawerSelectedText" parent="@style/MtelDrawerBaseText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/play_white</item>
    </style>

    <style name="MtelDrawerRegularText" parent="@style/MtelDrawerBaseText" />

    <style name="MtelDrawerDisabledText" parent="@style/MtelDrawerRegularText">
        <item name="android:textColor">@color/play_disabled_grey</item>
    </style>

    <style name="MtelDrawerBaseTextPad" parent="MtelDrawerText">
        <!--<item name="android:textSize">@dimen/play_drawer_primary_size</item>-->
        <item name="android:textColor">@color/play_white</item>
        <!--<item name="android:ellipsize">marquee</item>-->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="MtelDrawerRegularTextPad" parent="@style/MtelDrawerBaseTextPad" />

    <style name="MtelDrawerSelectedTextPad" parent="@style/MtelDrawerBaseTextPad">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/play_white</item>
    </style>

    <style name="MtelImageView" />

    <style name="MtelDrawerBaseImageView" parent="@style/MtelImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/play_drawer_item_left_padding</item>
    </style>

    <style name="DrawerList">
        <!--<item name="android:background">@color/play_white</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:cacheColorHint">@color/play_white</item>
        <item name="android:divider">@null</item>
        <item name="android:choiceMode">none</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="CommonEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/mpfa_common_input_bg_color</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/mpfa_common_font_color</item>
        <item name="android:textColorHint">@color/mpfa_common_font_color</item>
        <item name="android:textSize">?attr/mtelFontSize</item>
    </style>

    <style name="MtelToolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="MtelProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_big</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
    </style>
</resources>
